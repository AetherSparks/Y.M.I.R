    <script>



        function navigate(event, pageName) {
            event.preventDefault(); // Stop full reload
        
            fetch(`/${pageName}`) // ‚úÖ Correct string interpolation
              .then(response => {
                if (!response.ok) throw new Error('Page load failed');
                return response.text();
              })
              .then(html => {
                document.getElementById("mainContent").innerHTML = html;
                history.pushState(null, '', `/${pageName}`); // ‚úÖ Correct string interpolation
              })
              .catch(error => {
                console.error('Navigation error:', error);
                document.getElementById("mainContent").innerHTML = "<p>Could not load page.</p>";
              });
          }
        
          // ‚úÖ Handles back/forward button navigation
          window.onpopstate = () => {
            const path = window.location.pathname.slice(1) || 'home';
            navigate({ preventDefault: () => {} }, path);
          };

        function showToast(message) {
            const toast = document.getElementById('toast');
            toast.innerHTML = `<span style="font-size: 1.2rem;">${message}</span>`;
            toast.classList.remove('hidden');
            toast.classList.add('show');
        
            setTimeout(() => {
                toast.classList.remove('show');
                toast.classList.add('hidden');
            }, 3000);
        }
        

        
        document.addEventListener("DOMContentLoaded", function () {
            // Attach event listeners to all buttons with class 'save-btn'
            document.querySelectorAll(".save-btn").forEach(button => {
                button.addEventListener("click", function () {
                    const title = this.dataset.title;
                    const artist = this.dataset.artist;
                    const link = this.dataset.link;
        
                    saveToFavorites(title, artist, link);
                });
            });
        
            // Load the playlist when the page loads
            loadPlaylist();
        });
        
        function saveToFavorites(title, artist, link) {
            fetch('/save_favorite', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ title, artist, link })
            })
            .then(res => res.json())
            .then(data => {
                if (data.status === 'saved') {
                    showToast(`üé∂ "${title}" added to your playlist!`);
                    loadPlaylist();
                } else {
                    showToast(`‚ö†Ô∏è Already in your playlist!`);
                }
            });
            
        }
        
        function loadPlaylist() {
            fetch('/get_favorites')
                .then(res => res.json())
                .then(songs => {
                    const list = document.getElementById('playlist');
                    list.innerHTML = '';
                    songs.forEach(song => {
                        const li = document.createElement('li');
                        li.innerHTML = `
                            ${song.title} ‚Äî ${song.artist}
                            <button class="remove-btn" onclick="removeFavorite('${song.title}', '${song.artist}')">‚úñ</button>
                        `;
                        list.appendChild(li);
                    });
                });
        }
        


        
        let stream = null;
        const video = document.getElementById('videoFeed');
        const cameraBtn = document.getElementById('cameraToggleBtn');
    
        cameraBtn.addEventListener('click', async () => {
            if (!stream) {
                // Start Camera
                try {
                    stream = await navigator.mediaDevices.getUserMedia({ video: true });
                    video.srcObject = stream;
                    video.style.display = 'block';
                    cameraBtn.innerText = 'Stop Camera';
    
                    // Optional: Start backend video feed (Flask)
                    await fetch('/start_camera', { method: 'POST' });
    
                } catch (err) {
                    console.error(err);
                    alert('Camera permission denied or unavailable!');
                }
            } else {
                // Stop Camera
                stopCamera();
            }
        });
    
        function stopCamera() {
            if (stream) {
                stream.getTracks().forEach(track => track.stop()); // Properly stop all tracks
                video.srcObject = null;
                stream = null;
                video.style.display = 'none';
                cameraBtn.innerText = 'Start Camera';
    
                // Optional: Stop backend camera too
                fetch('/stop_camera', { method: 'POST' });
            }
        }
        
    
        // Auto-stop camera when leaving/reloading tab
        window.addEventListener('beforeunload', () => {
            if (stream) {
                stopCamera();
            }
        });

        let songsList = [];  // Will hold song data dynamically

            // Check if the header script has already run
        if (!window.headerScriptExecuted) {
            window.headerScriptExecuted = true;
            
            document.addEventListener('DOMContentLoaded', function() {
                const mobileMenuButton = document.getElementById('mobile-menu-button');
                const mobileMenu = document.getElementById('mobile-menu');
                
                if (mobileMenuButton && mobileMenu) {
                    mobileMenuButton.addEventListener('click', function() {
                        mobileMenu.classList.toggle('hidden');
                        this.classList.toggle('active');
                        
                        // Reset animations when toggling menu
                        const mobileLinks = document.querySelectorAll('.mobile-link');
                        mobileLinks.forEach(link => {
                            link.style.animation = 'none';
                            link.offsetHeight; // Trigger reflow
                            link.style.animation = null;
                        });
                    });
                }
                    document.addEventListener('DOMContentLoaded', () => {
                      const menuButton = document.getElementById('mobile-menu-button');
                      const mobileMenu = document.getElementById('mobile-menu');
                  
                      menuButton.addEventListener('click', () => {
                        mobileMenu.style.display = mobileMenu.style.display === 'flex' ? 'none' : 'flex';
                        menuButton.classList.toggle('active');
                      });
                    });
                  
                // Add subtle hover animations to nav links
                const navLinks = document.querySelectorAll('.nav-link');
                navLinks.forEach(link => {
                    link.addEventListener('mouseenter', function() {
                        this.style.transform = 'translateY(-2px)';
                    });
                    
                    link.addEventListener('mouseleave', function() {
                        this.style.transform = 'translateY(0)';
                    });
                });
            });
        }

        // Main application script
        document.addEventListener("DOMContentLoaded", function () {
            function fetchEmotions() {
                fetch('/get_emotions')
                    .then(response => response.json())
                    .then(data => console.log("Emotions:", data))
                    .catch(error => console.error("Error fetching emotions:", error));
            }

            fetchEmotions();
            setInterval(fetchEmotions, 8000);

            document.addEventListener("visibilitychange", function () {
                if (document.hidden) {
                    console.log("‚è∏Ô∏è Tab hidden - Pausing camera...");
                    fetch('/toggle_camera', { 
                        method: 'POST',
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify({ action: "pause" }) 
                    })
                    .then(response => response.json())
                    .then(data => console.log(data.status))
                    .catch(error => console.error("Error pausing camera:", error));

                    processResults(); // Keep updating recommendations even when tab is hidden
                } else {
                    console.log("‚ñ∂Ô∏è Tab visible again - Resuming camera...");
                    document.getElementById("camera-feed").src = "/video_feed?" + new Date().getTime();
                    fetch('/toggle_camera', { 
                        method: 'POST',
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify({ action: "resume" }) 
                    })
                    .then(response => response.json())
                    .then(data => console.log(data.status))
                    .catch(error => console.error("Error resuming camera:", error));
                }
            });

            document.getElementById("user-input").addEventListener("keypress", function (event) {
                if (event.key === "Enter") {
                    sendMessage();
                }
            });

            setInterval(processResults, 8000); // Update song recommendations every 5 seconds
        });

        function sendMessage() {
            let userMessage = document.getElementById("user-input").value.trim();
            if (!userMessage) return;

            let chatBox = document.getElementById("chat-box");
            chatBox.innerHTML += `<p><strong>You:</strong> ${userMessage}</p>`;

            fetch("/chat", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ message: userMessage })
            })
            .then(response => response.json())
            .then(data => {
                chatBox.innerHTML += `<p><strong>Bot:</strong> ${data.response}</p>`;

                if (data.end_chat) {
                    chatBox.innerHTML += `<p class="emotion-final">üß† Final Emotion Detected: <strong>${data.dominant_emotion.toUpperCase()}</strong></p>`;
                    document.getElementById("user-input").disabled = true;
                    document.getElementById("send-btn").disabled = true;
                }

                chatBox.scrollTop = chatBox.scrollHeight;
                document.getElementById("user-input").value = "";
            })
            .catch(error => console.error("Error:", error));
        }


        //dikkat
        function processResults() {
            fetch('/process_results')
                .then(response => response.json())
                .then(data => {
                    console.log("‚úÖ Received Data:", data);
        
                    let songContainer = document.getElementById("results");
                    
                    // Check if the response contains valid recommended songs
                    if (!data || !data.recommended_songs || !Array.isArray(data.recommended_songs) || data.recommended_songs.length === 0) {
                        console.warn("‚ö†Ô∏è No detected emotion. Falling back to neutral songs.");
        
                        // Fetch neutral songs instead of showing "No songs found"
                        fetch('/get_neutral_songs')
                            .then(response => response.json())
                            .then(neutralData => {
                                if (!neutralData || !neutralData.songs || neutralData.songs.length === 0) {
                                    songContainer.innerHTML = "<p style='color: red;'>‚ùå No songs found!</p>";
                                } else {
                                    displaySongs(neutralData.songs);
                                }
                            })
                            .catch(error => {
                                console.error("‚ùå Error fetching neutral songs:", error);
                                songContainer.innerHTML = "<p style='color: red;'>‚ùå No songs found!</p>";
                            });
        
                        return;  // Exit early since we're fetching fallback songs
                    }
        
                    // Display detected songs
                    displaySongs(data.recommended_songs);
                })
                .catch(error => {
                    console.error('‚ùå Fetch Error:', error);
                    document.getElementById("results").innerHTML = "<p style='color: red;'>‚ùå No songs found!</p>";
                });
        }
        

        // ‚úÖ **Continuous Scroll Effect**
        function startInfiniteScroll() {
            const slider = document.getElementById("songSlider");
        
            let intervalId;
        
            function startScroll() {
                intervalId = setInterval(() => {
                    slider.scrollLeft += 1;
                }, 20);
            }
        
            function stopScroll() {
                clearInterval(intervalId);
            }
        
            slider.addEventListener("mouseenter", stopScroll);
            slider.addEventListener("mouseleave", startScroll);
            slider.addEventListener("mousedown", stopScroll); // Stops when dragging
        
            startScroll(); // Kick it off
        }
        
        
        // ‚úÖ **Update songs every 15 seconds**
        setInterval(processResults, 5000);
        // Global variables for the music player
        let currentSongIndex = 0;
        let audioPlayer;
        let isPlaying = false;

        // Function to play a song when the user clicks "Listen"
        function playSong(track, artist) {
        // Find the song in the songsList array
        const songIndex = songsList.findIndex(song => 
            song.track === track && song.artist === artist
        );
        
        if (songIndex !== -1) {
            // Start the wind animation
            startWindAnimation();
            
            // Set a timeout to open the player after the wind animation completes
            setTimeout(() => {
            openPlayer(songsList[songIndex], songIndex);
            }, 1000); // Wait for 1 second to allow the wind animation to run
        } else {
            console.error("Song not found in the list");
        }
        }

        // Start the wind animation
        function startWindAnimation()
        {
        const popup = document.getElementById('musicPlayerPopup');
        const windAnimation = popup.querySelector('.wind-animation');
        const playerContent = document.getElementById('playerContent');
        
        // Position the wind particles randomly
        const particles = windAnimation.querySelectorAll('.wind-particle');
        particles.forEach(particle => {
            const size = Math.random() * 10 + 5;
            particle.style.width = `${size}px`;
            particle.style.height = `${size}px`;
            particle.style.left = `${Math.random() * 100}%`;
            particle.style.top = `${Math.random() * 100}%`;
            particle.style.animationDelay = `${Math.random() * 0.5}s`;
        });
        
        // Show the popup and start the animation
        popup.classList.remove('hidden');
        popup.classList.add('visible');
        
        // Reset the player content
        playerContent.classList.remove('player-visible');
        playerContent.classList.add('player-hidden');
        
        // Start the wind animation
        windAnimation.classList.add('active');
        
        // Set a timeout to hide the wind animation and show the player
        setTimeout(() => {
            windAnimation.classList.remove('active');
            playerContent.classList.remove('player-hidden');
            playerContent.classList.add('player-visible');
        }, 1500);
        }



        function openPlayer(song, index) {
            const audioPlayer = document.getElementById('audioPlayer');
            const playerContent = document.getElementById('playerContent');
            const loadingMessage = document.getElementById('loadingMessage');
            const windAnimation = document.querySelector('.wind-animation');
            
            // Show loading state
            loadingMessage.style.display = 'block';
            playerContent.classList.add('player-hidden');
