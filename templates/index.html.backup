            }
        }

        footer .flex-col {
            flex-direction: column;
        }

        footer .justify-between {
            justify-content: space-between;
        }

        /* Music Player Popup Styles */
        .music-player-popup {
          position: fixed;
          bottom: 30px;
          right: 30px;
          width: 300px;
          height: 300px;
          z-index: 1000;
          transition: all 0.5s ease;
          font-family: 'Poppins', 'Arial', sans-serif;
          overflow: hidden;
          pointer-events: none;
        }
        
        .music-player-popup.hidden {
          opacity: 0;
          transform: scale(0.8);
        }
        
        .music-player-popup.visible {
          opacity: 1;
          transform: scale(1);
          pointer-events: all;
        }
        
        /* Wind Animation */
        .wind-animation {
          position: absolute;
          width: 100%;
          height: 100%;
          top: 0;
          left: 0;
          z-index: 1;
          pointer-events: none;
        }
        
        .wind-particle {
            width: 6px;
            height: 6px;
          position: absolute;
          background: linear-gradient(135deg, rgba(255,255,255,0.8), rgba(255,255,255,0.1));
          border-radius: 50%;
          pointer-events: none;
          opacity: 0;
          margin: 0 4px;
          animation: wind 1.5s infinite ease-in-out;
        }
        
        .wind-animation.active .wind-particle {
          animation: windParticle 1.5s ease-out forwards;
        }
        
        @keyframes windParticle {
          0% {
            transform: scale(0) translateX(-100px) translateY(100px) rotate(0deg);
            opacity: 0.9;
          }
          50% {
            opacity: 0.7;
          }
          100% {
            transform: scale(1) translateX(300px) translateY(-300px) rotate(360deg);
            opacity: 0;
          }
        }
        
        /* Player Content */
        #playerContent {
          position: relative;
          width: 100%;
          height: 100%;
          background: linear-gradient(135deg, #1c3f3a, #182848, #1a2c3f);
          border-radius: 50%;
          padding: 20px;
          box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3), 
                      0 0 20px rgba(80, 255, 177, 0.2);
          color: white;
          display: flex;
          flex-direction: column;
          justify-content: space-between;
          align-items: center;
          transition: all 0.5s ease;
          z-index: 2;
          opacity: 0;
          transform: scale(0.8);
          box-sizing: border-box;
        }
        
        #playerContent.player-visible {
          opacity: 1;
          transform: scale(1);
        }
        
        .player-hidden {
          opacity: 0;
          transform: scale(0.8);
        }
        
        .close-player-btn {
          position: absolute;
          top: 10px;
          right: 10px;
          background: rgba(255, 255, 255, 0.2);
          color: white;
          border: none;
          border-radius: 50%;
          width: 24px;
          height: 24px;
          display: flex;
          align-items: center;
          justify-content: center;
          cursor: pointer;
          font-size: 12px;
          transition: all 0.2s ease;
          z-index: 3;
        }
        
        .close-player-btn:hover {
          background: rgba(255, 255, 255, 0.3);
          transform: scale(1.1);
        }
        
        /* Player Header */
        .player-header {
          width: 100%;
          text-align: center;
          margin-top: 20px;
        }
        
        .now-playing {
          display: flex;
          flex-direction: column;
          align-items: center;
        }
        
        .now-playing-label {
          font-size: 12px;
          text-transform: uppercase;
          letter-spacing: 1px;
          color: rgba(255, 255, 255, 0.6);
          margin-bottom: 5px;
        }
        
        #currentSongTitle {
          font-weight: bold;
          font-size: 16px;
          margin: 0;
          white-space: nowrap;
          overflow: hidden;
          text-overflow: ellipsis;
          max-width: 200px;
        }
        
        #currentArtist {
          font-size: 14px;
          margin: 2px 0 0 0;
          color: rgba(255, 255, 255, 0.8);
        }
        
        /* Audio Visualization */
        .player-visualization {
          width: 80%;
          height: 40px;
          display: flex;
          justify-content: center;
          align-items: center;
          margin: 10px 0;
        }
        
        .visualizer-bars {
          display: flex;
          justify-content: center;
          align-items: flex-end;
          height: 100%;
          width: 100%;
          gap: 4px;
        }
        
        .bar {
          width: 4px;
          background: rgba(80, 255, 177, 0.7);
          border-radius: 2px;
          transition: height 0.2s ease;
        }
        
        /* Audio Player */
        audio {
          width: 90%;
          height: 30px;
          outline: none;
          border-radius: 15px;
          margin: 10px 0;
          opacity: 0.7;
        }
        
        /* Player Controls */
        .player-controls {
          display: flex;
          justify-content: center;
          align-items: center;
          gap: 15px;
          margin: 10px 0;
        }
        
        .control-btn {
          border: none;
          background: rgba(255, 255, 255, 0.1);
          color: white;
          border-radius: 50%;
          width: 36px;
          height: 36px;
          display: flex;
          align-items: center;
          justify-content: center;
          cursor: pointer;
          transition: all 0.2s ease;
          font-size: 16px;
        }
        
        .play-btn {
          width: 46px;
          height: 46px;
          background: linear-gradient(135deg, #50ffb1, #4ca2cd);
          font-size: 20px;
        }
        
        .control-btn:hover {
          transform: scale(1.1);
          background: rgba(255, 255, 255, 0.2);
        }
        
        .play-btn:hover {
          background: linear-gradient(135deg, #5aebb0, #5cb2e4);
        }
        
        /* Next Song Section */
        .next-song-container {
          width: 100%;
          text-align: center;
          margin-bottom: 20px;
        }
        
        .next-song-label {
          font-size: 10px;
          text-transform: uppercase;
          letter-spacing: 1px;
          color: rgba(255, 255, 255, 0.6);
          margin-bottom: 5px;
        }
        
        .next-song-info {
          background: rgba(255, 255, 255, 0.1);
          border-radius: 10px;
          padding: 8px;
        }
        
        #nextSongTitle {
          font-weight: bold;
          font-size: 12px;
          margin: 0;
          white-space: nowrap;
          overflow: hidden;
          text-overflow: ellipsis;
        }
        
        #nextArtist {
          font-size: 10px;
          margin: 2px 0 0 0;
          color: rgba(255, 255, 255, 0.8);
        }
        
        /* Animation for the bars */
        @keyframes equalize {
          0% { height: 5px; }
          50% { height: 25px; }
          100% { height: 5px; }
        }
        
        .playing .bar:nth-child(1) { animation: equalize 0.9s ease-in-out infinite 0.0s; }
        .playing .bar:nth-child(2) { animation: equalize 1.1s ease-in-out infinite 0.1s; }
        .playing .bar:nth-child(3) { animation: equalize 0.7s ease-in-out infinite 0.2s; }
        .playing .bar:nth-child(4) { animation: equalize 1.3s ease-in-out infinite 0.3s; }
        .playing .bar:nth-child(5) { animation: equalize 0.8s ease-in-out infinite 0.4s; }
        .playing .bar:nth-child(6) { animation: equalize 1.0s ease-in-out infinite 0.5s; }
        .playing .bar:nth-child(7) { animation: equalize 1.2s ease-in-out infinite 0.6s; }
        


        /* AI-Driven Dynamic UI Section */
        .dynamic-ui-section {
            background: rgba(25, 35, 60, 0.8);
            padding: 30px;
            border-radius: 15px;
            backdrop-filter: blur(10px);
            margin-bottom: 30px;
        }

        .theme-preview {
            display: flex;
            flex-direction: column;
            gap: 20px;
            margin-bottom: 25px;
        }

        .theme-info {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .theme-icon {
            font-size: 30px;
