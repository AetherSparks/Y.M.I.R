        /* Responsive footer */
        @media (min-width: 768px) {
            footer .md\:grid-cols-3 {
                grid-template-columns: repeat(3, minmax(0, 1fr));
            }
            
            footer .md\:flex-row {
                flex-direction: row;
            }
            
            footer .md\:mt-0 {
