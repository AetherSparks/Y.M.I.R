            // Function to build a Psychology Today search URL
            function buildPsychologyTodayUrl(location, specialty, insurance) {
                let url = 'https://www.psychologytoday.com/us/therapists';
                
                // Add location
                if (location) {
                    // Format location for URL (e.g., "New York, NY" -> "new-york-ny")
                    const formattedLocation = location.toLowerCase().replace(/\s+/g, '-').replace(/,/g, '');
                    url += `/${formattedLocation}`;
                }
                
                // Add specialty and insurance as query parameters if provided
                const params = [];
                if (specialty) params.push(`spec=${specialty}`);
                if (insurance) params.push(`insurance=${insurance}`);
                
                if (params.length > 0) {
                    url += '?' + params.join('&');
                }
                
                return url;
            }
            
