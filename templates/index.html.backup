        function startBreathingExercise() {
            secondsRemaining = 180; // 3 minutes
            updateTimerDisplay();
            
            exerciseInterval = setInterval(() => {
                secondsRemaining--;
                updateTimerDisplay();
                
                if (secondsRemaining <= 0) {
                    completeExercise();
                }
            }, 1000);
            
            startBreathingAnimation();
        }

        function startBreathingAnimation() {
            breathingCircle.classList.add('breathing-active');
            
            // Repeat the breathing cycle
            let phase = 'inhale';
            updateBreathingPrompt(phase);
            
            const breathingCycle = setInterval(() => {
                if (phase === 'inhale') {
                    phase = 'hold';
                    updateBreathingPrompt(phase);
                } else if (phase === 'hold') {
                    phase = 'exhale';
                    updateBreathingPrompt(phase);
                } else {
                    phase = 'inhale';
                    updateBreathingPrompt(phase);
                }
            }, phase === 'inhale' ? 4000 : phase === 'hold' ? 7000 : 8000);
            
            // Store the interval ID for cleanup
            exerciseData.breathingCycle = breathingCycle;
        }

        function updateBreathingPrompt(phase) {
            circleText.textContent = phase.charAt(0).toUpperCase() + phase.slice(1);
            
            if (phase === 'inhale') {
                breathingCircle.style.transform = 'scale(1.5)';
                breathingCircle.style.transition = 'transform 4s ease-in';
            } else if (phase === 'hold') {
                breathingCircle.style.transform = 'scale(1.5)';
                breathingCircle.style.transition = 'transform 0.1s ease';
            } else {
                breathingCircle.style.transform = 'scale(1)';
                breathingCircle.style.transition = 'transform 8s ease-out';
            }
        }

